<div class="h-100 container-fluid">
  <div class="row h-100">
    <%= render '/layouts/sidebar' %>
    <div class="col-10 m-0 p-0 bg-light">
      <%= render '/layouts/navbar' %>
      <div class="row m-0 mt-navbar">

        <div class="col-9 border-right px-0">
          <div class="cover-image mb-0"></div>
          <%= render '/users/shownav' %>
          <div class="px-3">
            <div class="p-3 mt-0 border rounded bg-white">
              <p class="h4 text-dark"><%= @user.full_name %>'s posts</p>
              <% @user.posts.each do |p| %>
                <div class="d-flex align-items-center">
                  <div class="profile-picture"></div>
                  <div class="w-100 pl-3">
                    <div class="d-flex justify-content-between">
                      <span class="h5 text-dark"><%= p.user.full_name %></span>
                      <small class="text-secondary"><%= p.created_at %> </small>
                    </div>
                    <p class="text-dark mb-0"><%= p.text %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="col-3 p-0">
          <%= render '/users/rightsidebar' %>
        </div>

      </div>
    </div>
  </div>
</div>
