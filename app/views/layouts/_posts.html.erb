<% posts.each do |p| %>
  <div class="d-flex align-items-center">
    <%= profile_picture(p.user) %>
    <div class="w-100 pl-3">
      <div class="d-flex justify-content-between">
        <span class="h5 text-dark"><%= p.user.full_name %></span>
        <small class="text-secondary"><%= p.created_at %> </small>
      </div>
      <p class="text-dark mb-0"><%= p.text %></p>
    </div>
  </div>
<% end %>