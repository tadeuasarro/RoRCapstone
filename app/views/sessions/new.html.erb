<div class="container-fluid">
  <div class="d-flex justify-content-center">
    <div class="w-50 pt-5">
      <%= form_for(@user, url: sessions_path, method: 'post') do |f| %>
        <div class="form-group p-3 mb-0">
          <p class="h1 text-dark text-center"><i class="fab fa-twitter"></i></p>
          <p class="h4 text-dark text-center">Login</p>
          <div>
            <%= f.label :username, class: 'form-text text-secondary' %>
            <%= f.text_field :username, autofocus: true, class: 'form-control' %>
          </div>
          <div class="mt-3">
            <%= f.submit 'Login', class: 'login-button' %>
          </div>
        </div>
        <div class="d-flex justify-content-end align-items-center">
          <small class="text-dark mr-1">Not registered?</small>
          <%= link_to 'Sign up', new_user_path, class: 'no-link mr-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>